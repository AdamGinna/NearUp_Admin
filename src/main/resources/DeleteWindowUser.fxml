<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.202-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.DeleteWindowUser">
    <children>
        <Label text="Are you sure you want to delete this?" textFill="RED">
            <VBox.margin>
                <Insets bottom="20.0" top="20.0" />
            </VBox.margin>
            <font>
                <Font size="26.0" />
            </font>
        </Label>
        <AnchorPane prefHeight="165.0" prefWidth="600.0">
            <children>
                <Label layoutX="47.0" layoutY="14.0" text="Id:">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label layoutX="47.0" layoutY="65.0" text="Name:">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label contentDisplay="RIGHT" layoutX="39.0" layoutY="115.0" text="mail">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label fx:id="mail" contentDisplay="RIGHT" layoutX="130.0" layoutY="115.0">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label fx:id="name" contentDisplay="RIGHT" layoutX="125.0" layoutY="65.0">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label fx:id="id" contentDisplay="RIGHT" layoutX="77.0" layoutY="14.0">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <HBox alignment="CENTER" prefHeight="71.0" prefWidth="600.0">
            <children>
                <Button mnemonicParsing="false" onMouseClicked="#delete" text="Delete" textFill="RED">
                    <HBox.margin>
                        <Insets right="100.0" />
                    </HBox.margin>
                    <font>
                        <Font size="17.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onMouseClicked="#cancel" text="Cancel">
                    <HBox.margin>
                        <Insets left="100.0" />
                    </HBox.margin>
                    <font>
                        <Font size="21.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
